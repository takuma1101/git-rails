<p id="notice"></p>
<h1>Editing Book</h1>
<% if @book.errors.any? %>
  <div id="error_explanation">
     <h2><%= @book.errors.count %> errors prohibited this book from being saved:</h2>
   <ul> <% @book.errors.full_messages.each do |message| %>
         <li><%= message %></li>
        <% end %>
   </ul>
  </div>
<% end %>

 <%=form_with model: @book ,url: book_path(@book.id),method: :patch ,local: true do |f|%>
 <div class="field">
    <label for="book_title">Title</label>
   <input class="book_title" type="text" value="<%= @book.title %>" name="book[title]" id="book_title" >
 </div>
  <div class="field">
    <label for="book_body">Body</label>
    <textarea class="book_body"name="book[body]" id="book_body"><%= @book.body %></textarea>
    </div>
  <div class="actions">
  <input type="submit" name="commit" value="Update Book" data-disable-with="Update Book" >
  </div>
  <%= link_to "Show", book_path(@book.id),class: "show_#{@book.id}" %>
  |
  <a class="back" href="/books">Back</a>
  <% end %>